<div class="container">
  <div id="l2-logo">
    <div class="col-md-2 col-sm-2 col-xs-3">
      <%= link_to (image_tag 'logo6.png', class: 'img-responsive'), root_path %>
    </div>
</div>
</div>


<div class="container" id="l2">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @page.title %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <%= image_tag 'sunrise.jpg', class: 'img-responsive' %>
      <%= @page.content_for(:body).html_safe %>
      <%= raw @page.content_for(:section1) %>
      <%= raw @page.content_for(:section2) %>
      <%= raw @page.content_for(:section3) %>
      <%= raw @page.content_for(:section4) %>
    </div>

    <div class="col-md-4">
      <div class="home-quote no-top-margin">
        <blockquote>
          “What was unusable acreage is now thriving and profitable thanks to the work of Integrated Restorations.“ <br /><em>&mdash; John Smith, Smith Developments</em>
        </blockquote>
      </div>
      <%#= image_tag 'http://placehold.it/400x300' %>
    </div>
  </div>  
</div>
