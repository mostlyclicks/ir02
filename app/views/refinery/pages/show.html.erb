<%= render 'refinery/shared/logo' %>


<div class="container" id="l2">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @page.title %></h1>
    </div>
  </div>

  <div class="row">

    <div class="col-md-8">
      <%#= image_tag 'sunrise.jpg', class: 'img-responsive' %>
      <% @page.images.each_with_index do |image, index| %>
        <%= image_fu(image, '750x300c') %>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="home-quote no-top-margin">
        <blockquote>
          <%= raw @random_testimonial.excerpt %><br />
          &mdash; <em><%= @random_testimonial.name %></em>
        </blockquote>
      </div>
    </div>

  </div>  
  <div class="row">

    <div class="col-md-8">
      <%= @page.content_for(:body).html_safe %>
    </div>
    <div class="col-md-4">
      <%= child_sub_menu_pages.to_html %>
    </div>
  </div>
</div>
