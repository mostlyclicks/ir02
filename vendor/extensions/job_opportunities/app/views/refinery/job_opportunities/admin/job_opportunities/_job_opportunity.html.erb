<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(job_opportunity) -%>">
  <span class='title'>
    <%= job_opportunity.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.job_opportunities_job_opportunity_path(job_opportunity),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_job_opportunities_admin_job_opportunity_path(job_opportunity),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.job_opportunities_admin_job_opportunity_path(job_opportunity),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => job_opportunity.title),
        :method => :delete %>
  </span>
</li>
