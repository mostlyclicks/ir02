<%= form_for [refinery, :employees_admin, @employee] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @employee,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :job_title -%>
    <%= f.text_field :job_title -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:bio],
                :object => "employees/employee" -%>
  </div>

  <div class='field'>
    <%= f.label :employee_pict -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :employee_pict_id,
               :image => @employee.employee_pict,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.employees.admin.employees.employee'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @employee.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
