<% content_for :body do %>
  <ul id="testimonials">
    <% @testimonials.each do |testimonial| %>
      <li>
        <%= link_to testimonial.name, refinery.testimonials_testimonial_path(testimonial) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%#= render '/refinery/content_page' %>
<%= render 'refinery/shared/logo' %>

<div class="container" id="l2">
  <div class="row">
    <div class="col-md-8">
      <div class="" style="">
        <h1>Testimonials</h1>
          <% @testimonials.each do |testimonial| %>
          <blockquote class="l2-quote">
            <%= raw testimonial.body %>
            <span><%= testimonial.name %><%= ', ' + testimonial.job_title unless blank? %><br />
              <small><%= testimonial.organization unless blank? %></small></span> 
          </blockquote>
        <% end %>
      </div>
    </div>
  </div>
</div>