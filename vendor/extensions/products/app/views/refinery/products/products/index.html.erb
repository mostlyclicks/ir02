<%= render '/refinery/shared/logo' %>
<% content_for :body do %>
  <ul id="products">
    <% @products.each do |product| %>
      <li>
        <%= link_to product.name, refinery.products_product_path(product) %>
      </li>
    <% end %>
  </ul>
<% end %>



<%#= render '/refinery/content_page' %>

<div class="container" id="l2">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @page.title %></h1>
    </div>
  </div>

  <div class="row">

    <div class="col-md-8">
      <% @products.each do |product| %>
        <% if product.id % 2 != 0 %>
          <div class="row">
            <div class="col-md-8">
              <h2><%= product.name %></h2>
              <%= raw product.prod_description %>
            </div>
            <div class="col-md-4" style="margin-top:38px;">
              <%= image_fu(product.prod_image, '300x250#c', class: 'img-responsive') %>
            </div>
          </div>
        <% else %>
          <div class="row">
            <div class="col-md-4" style="margin-top:25px;">
              <%= image_fu(product.prod_image, '300x250#c', class: 'img-responsive') %>
            </div>
            <div class="col-md-8">
              <h2><%= product.name %></h2>
              <%= raw product.prod_description %>
            </div>
          </div>
          <% end %>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="home-quote no-top-margin">
        <blockquote>
          <%= raw @random_testimonial.excerpt %><br />
          &mdash; <em><%= @random_testimonial.name %></em>
        </blockquote>
      </div>
    </div>

  </div>  
  <div class="row">

    <div class="col-md-8">
      <%#= @page.content_for(:body).html_safe %>
    </div>
    <div class="col-md-4">
      <%#= child_sub_menu_pages.to_html %>
    </div>
  </div>
</div>
