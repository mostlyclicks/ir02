<% content_for :body_content_title do %>
  <%= @product.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @product.name %>
    </p>
  </section>
  <section>
    <h1>Prod Image</h1>
    <p>
      <%= image_fu @product.prod_image, nil %>
    </p>
  </section>
  <section>
    <h1>Prod Pdf</h1>
    <p>
      <% if @product.prod_pdf.present? %>
        <%= link_to 'prod_pdf', @product.prod_pdf.url %>
      <% else %>
        prod_pdf
      <% end %>
    </p>
  </section>
  <section>
    <h1>Prod Description</h1>
    <p>
      <%=raw @product.prod_description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="products">
      <% @products.each do |product| %>
        <li>
          <%= link_to product.name, refinery.products_product_path(product) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
