<ul>
  <% if ::Refinery::CaseStudies::Admin::CaseStudiesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.case_studies_admin_case_studies_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_case_studies_admin_case_study_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::CaseStudies::Admin::CaseStudiesController.sortable? && ::Refinery::CaseStudies::CaseStudy.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Case Studies"),
                 refinery.case_studies_admin_case_studies_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Case Studies"),
                 refinery.case_studies_admin_case_studies_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
