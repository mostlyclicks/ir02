<% content_for :body_content_title do %>
  <%= @case_study.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @case_study.title %>
    </p>
  </section>
  <section>
    <h1>Client</h1>
    <p>
      <%=raw @case_study.client %>
    </p>
  </section>
  <section>
    <h1>Testimonial</h1>
    <p>
      <%=raw @case_study.testimonial %>
    </p>
  </section>
  <section>
    <h1>Hero Image</h1>
    <p>
      <%= image_fu @case_study.hero_image, nil %>
    </p>
  </section>
  <section>
    <h1>Before Image</h1>
    <p>
      <%= image_fu @case_study.before_image, nil %>
    </p>
  </section>
  <section>
    <h1>After Image</h1>
    <p>
      <%= image_fu @case_study.after_image, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @case_study.description %>
    </p>
  </section>
  <section>
    <h1>Case Study Pdf</h1>
    <p>
      <% if @case_study.case_study_pdf.present? %>
        <%= link_to 'case_study_pdf', @case_study.case_study_pdf.url %>
      <% else %>
        case_study_pdf
      <% end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="case_studies">
      <% @case_studies.each do |case_study| %>
        <li>
          <%= link_to case_study.title, refinery.case_studies_case_study_path(case_study) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
