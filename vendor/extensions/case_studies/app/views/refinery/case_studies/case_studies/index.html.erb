<% content_for :body do %>
  <ul id="case_studies">
    <% @case_studies.each do |case_study| %>
      <li>
        <%= link_to case_study.title, refinery.case_studies_case_study_path(case_study) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%#= render '/refinery/content_page' %>
<%= render 'refinery/shared/logo' %>

<div class="container" id="l2">
  <div class="row">
    <div class="col-md-8">
      <div class="" style="">
        <h1>Case Studies</h1>
          <% @case_studies.each do |case_study| %>
            <h3><%= link_to case_study.title, refinery.case_studies_case_study_path(case_study) %></h3>
            <p><%#= case_study.description %></p>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="home-quote top-margin">
        <blockquote>
          <%= render '/refinery/shared/testimonials' %>
        </blockquote>
      </div>
      <% unless @page.content_for(:research_papers).empty? %>
        <div style="margin-top:40px;">
          <h3>Research Papers</h3>
          <%= raw @page.content_for(:research_papers) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
